---
import { ClientRouter } from "astro:transitions";
import Header from "@/components/structure/Header.astro";
import SkeletonCard from "@/components/indicators/SkeletonCard.astro";
import Search from "@/components/interactive/Search.astro";

interface Props {
    title?: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title || "Diajar.in"}</title>
        <link rel="stylesheet" href="/style.css" />
        <ClientRouter />
    </head>
    <body transition:animate="none" class="text-gray-900">
        <Header currentPath={currentPath} />
        <main class="pt-[60px]">
            <div
                class="grid grid-cols-[1fr_min(60rem,100%)_1fr] sticky top-[59px] bg-white"
            >
                <Search placeholder="Cari Utas" className="col-start-2 pb-2" />
            </div>
            <div
                class="grid
                    grid-cols-[1fr_min(60rem,100%)_1fr]
                    w-full"
            >
                <ul
                    id="shimmer"
                    class="col-start-2 grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-8 px-4 gap-4 hidden"
                >
                    {
                        Array.from(new Array(9)).map(() => (
                            <li>
                                <SkeletonCard />
                            </li>
                        ))
                    }
                </ul>
                <slot />
            </div>
        </main>
    </body>
</html>

<script is:inline>
    document.addEventListener("astro:before-preparation", () => {
        document.querySelector("#shimmer").classList.remove("hidden");
    });

    document.addEventListener("astro:after-preparation", () => {
        document.querySelector("#shimmer").classList.add("hidden");
    });
</script>
