---
import Header from "@/components/structure/Header.astro";
import Search from "@/components/interactive/Search.astro";

interface Props {
    title?: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title || "Diajar.in"}</title>
        <link rel="stylesheet" href="/style.css" />
    </head>
    <body transition:animate="none" class="text-gray-900">
        <Header currentPath={currentPath} />
        <main class="pt-[60px]">
            <div
                class="grid grid-cols-[1fr_min(60rem,100%)_1fr] sticky top-[59px] bg-white"
            >
                <Search placeholder="Cari Utas" className="pb-2" />
            </div>
            <div
                class="grid
                    grid-cols-[1fr_min(60rem,100%)_1fr]
                    w-full"
            >
                <slot />
            </div>
        </main>
    </body>
</html>
