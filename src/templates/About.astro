---
import Header from "@/components/structure/Header.astro";

interface Props {
    title?: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title || "Diajar.in"}</title>
    </head>
    <body transition:animate="none" class="text-gray-900">
        <Header currentPath={currentPath} />
        <main class="pt-[60px]">
            <div
                class="grid
                    grid-cols-[1fr_min(40rem,100%)_1fr]
                    w-full my-6"
            >
                <div class="col-start-2 content px-4">
                    <slot />
                </div>
            </div>
        </main>
    </body>
</html>

<style is:global>
    .content {
        h4,
        h2,
        h1 {
            font-size: var(--text-2xl-fontSize);
            line-height: var(--text-2xl-lineHeight);
        }

        h3 {
            font-size: var(--text-lg-fontSize);
            line-height: var(--text-lg-lineHeight);
        }

        h2 + p,
        h3 + p {
            margin-top: 0.625rem;
        }

        p + p {
            margin-top: 0.5rem;
        }

        hr {
            margin: 1rem 0;
            border-color: var(--colors-gray-300);
        }

        a {
            text-decoration: var(--colors-gray-900);
            text-decoration-style: dotted;
            font-weight: 500;
            font-style: italic;
            text-decoration-line: underline;
            padding-bottom: 4px;
            text-decoration-thickness: 2px;
        }

        a,
        code {
            word-wrap: break-word;
        }

        h2,
        h3,
        h4,
        h5 {
            font-family: "Courier New", Courier, monospace;
            font-weight: bold;
        }
    }
</style>
