---
import { ClientRouter } from "astro:transitions";
import Header from "@/components/structure/Header.astro";
import StoriesPlayer from "@/components/interactive/StoriesPlayer.astro";
import PriorityMenu from "@/components/navigation/PriorityMenu.astro";
import { menuItems } from "@/utils";

interface Props {
    title?: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title || "Diajar.in"}</title>
        <link rel="stylesheet" href="/style.css" />
        <ClientRouter />
    </head>
    <body transition:animate="none">
        <Header currentPath={currentPath} />
        <main>
            <StoriesPlayer />
            <PriorityMenu items={menuItems} currentPath={currentPath} />
            <div
                class="grid
                    grid-cols-[1fr_min(40rem,100%)_1fr]
                    w-full my-4"
            >
                <slot />
            </div>
        </main>
    </body>
</html>
