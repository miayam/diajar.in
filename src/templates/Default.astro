---
import { ClientRouter } from "astro:transitions";
import Header from "@/components/structure/Header.astro";
import StoriesPlayer from "@/components/interactive/StoriesPlayer.astro";
import SkeletonCard from "@/components/indicators/SkeletonCard.astro";
import Search from "@/components/interactive/Search.astro";
import PriorityMenu from "@/components/navigation/PriorityMenu.astro";
import { menuItems } from "@/utils";

interface Props {
    title?: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title || "Diajar.in"}</title>
        <link rel="stylesheet" href="/style.css" />
        <ClientRouter />
    </head>
    <body transition:animate="none" class="text-gray-900">
        <!-- Search Dialog -->
        <Header currentPath={currentPath} />
        <main class="pt-[60px]">
            <StoriesPlayer />
            <div
                class="grid grid-cols-[1fr_min(40rem,100%)_1fr] sticky md:top-[59px] top-[55px]"
            >
                <Search type="articles" className="col-start-2" />
            </div>
            <div
                class="grid grid-cols-[1fr_min(40rem,100%)_1fr] sticky top-[131px]"
            >
                <PriorityMenu
                    items={menuItems}
                    currentPath={currentPath}
                    className="col-start-2"
                />
            </div>
            <div class="min-h-[48rem] h-auto">
                <div
                    class="grid
                    grid-cols-[1fr_min(40rem,100%)_1fr]
                    w-full my-4"
                >
                    <ul
                        id="shimmer"
                        class="col-start-2 flex flex-col gap-4 px-4 hidden"
                    >
                        {
                            Array.from(new Array(9)).map(() => (
                                <li>
                                    <SkeletonCard />
                                </li>
                            ))
                        }
                    </ul>
                    <slot />
                </div>
            </div>
        </main>
    </body>
</html>

<script is:inline>
    document.addEventListener("astro:before-preparation", () => {
        document.querySelector("#shimmer").classList.remove("hidden");
    });

    document.addEventListener("astro:after-preparation", () => {
        document.querySelector("#shimmer").classList.add("hidden");
    });
</script>
